% headlines styles
% use section, subsection and subsubsection. chapter is for appendices
\titleformat{\section}
{\clearpage\bfseries\normalsize\centering}
{\thesection}
{1em}{}

\titleformat{\subsection}
{\normalsize\bfseries}
{\thesubsection}
{1em}{}

\titleformat{\subsubsection}
{\normalsize}
{\thesubsubsection}
{1em}{}

\titleformat{\chapter}
{\pagebreak\bfseries\normalsize\centering}
{\thechapter}
{1em}{}

\titlespacing*{\section}{\parindent}{*4}{*4}
\titlespacing*{\subsection}{\parindent}{*4}{*2}
\titlespacing*{\subsubsection}{\parindent}{*4}{*2}
\titlespacing*{\chapter}{\parindent}{*4}{*4}
% end headlines styles
